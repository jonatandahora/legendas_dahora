.ui.grid.page
  .ui.sixteen.wide.column
    .row
    %h1.ui.center.aligned.header Legenda Traduzida
    .row
    %table.ui.black.table
      %thead
        %tr
          %th.seq SequÃªncia
          %th.time Tempo
          %th.text Linha
      %tbody
        - $translated.lines.zip(@original.lines).each do |line, line_original|
          %tr
            %td.seq= line.sequence
            %td.time= line.time_str
            %td.text
              .ui.pointing.below.label
                - line_original.text.each do |line_array|
                  %label= line_array
              - line.text.each do |line_array|
                .ui.fluid.corner.labeled.input
                  %input{name: "line[#{line.sequence}][#{line.text.index(line_array)}]" ,value: line_array }
                  .ui.corner.label
                    %i.question.icon
    .row
      .ui.button
        = link_to 'Download', translation_download_url
    .row